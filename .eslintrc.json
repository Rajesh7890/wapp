{
	"env": {
		"browser": true,
		"es2021": true
	},
	"parser": "@babel/eslint-parser",
	"extends": [
		  "airbnb",
	    "eslint:recommended",
	    "plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"arrowFunctions": true,
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"semi":         ["error", "always"],
		"key-spacing":  [2, { "beforeColon": false, "afterColon": true, "mode": "minimum", "align": "value" }],
    "comma-dangle": [2, "only-multiline"]

		// "quotes": ["error", "double"]
	}
}
